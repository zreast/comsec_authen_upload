.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
	.container
		// Group Brand and toggle for better mobile display
		.navbar-header
			a.navbar-brand(href='#/') DaBest Secure File Storage
			// Collapse Button
			button.navbar-toggle(type='button', data-target='.navbar-collapse', data-toggle='collapse')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
		// @END navbar header
		.collapse.navbar-collapse
			ul.nav.navbar-nav
				li(ng-show='auth.isLogged')
					a(href='#/admin') Admin
				// <li><a href="#/">Admin</a></li>
				li(ng-show='auth.isLogged')
					a(href='#/about') About
			ul.nav.navbar-nav.navbar-right
				li(ng-if='auth.isLogged', ng-model='welcome')
					a(href='#/logout') {{welcome}}! Logout
				li(ng-if='!auth.isLogged')
					a(href='#/login') Login
