.login_module.font_prompt
	.row
		.col-sm-6.col-md-5.hidden-xs.hidden-sm
			img.center-block.img-responsive(src='../assets/img/hacker_login.png', alt='')
		.col-md-1.hidden-xs.hidden-sm
			.border-login
		.col-sm-12.col-xs-12.col-md-4
			h1.white-text 
				.fa.fa-pencil-square-o
				| &nbsp;สมัครสมาชิก
			// Registeration Form
			form(name='fmRegister', novalidate='', method='post', ng-submit='register()')
				.form-group
					label Username
					input.form-control(type='text', name='username', ng-model='user.username', ng-required='true')
				.form-group
					label Password
					input.form-control(type='password', name='password', ng-model='user.password', ng-required='true')
				.form-group
					label Confirm Password
					input.form-control(type='password', name='password1', ng-model='user.passwordConfirmation', ng-required='true')
				.form-group
					label Email
					input.form-control(type='email', name='email', ng-model='user.email', ng-required='true')
				.form-group
					.col-sm-offset-4.col-sm-10
						// Form will be invalid unless the input box has content only then will the Button become active
						button.btn.btn-primary.btn-lg(type='submit', ng-disabled='fmRegister.$invalid') Register
			div
				h2
					span.label.label-info {{message.info}}
				h2
					span.label.label-warning {{message.error}}
				h2
					span.label.label-success {{message.success}}
